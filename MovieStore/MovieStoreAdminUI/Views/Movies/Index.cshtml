@model IEnumerable<MovieStoreDAL.Movie>

@{
    ViewBag.Title = "Index";
    //Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3> All movies</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right"> ID </th>
                <th>Title</th>
                <th>Year</th>
                <th class="text-center">Genre</th>
                <th class="text-right">Price</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var movie in Model)
            {
                <tr>
                    <td class="text-right"> @movie.Id</td>
                    <td>@Html.ActionLink(movie.Title, "Edit", new {movie.Id})</td>
                    <td>@movie.Year.Year</td>
                    <td class="text-center">@movie.Genre</td>
                    <td class="text-right">@movie.Price.ToString("c")</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete","Movies"))
                        {
                            @Html.Hidden("id", movie.Id)
                            <input type="submit" class="btn btn-default btn-xs " value="Remove"/>
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add new","Create",null,new {@class= "btn btn-default center-block"})
    </div>
</div>


